{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": [
        "./node_modules/@overwolf/types",
        "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "windows/**/*"
  ]
}
